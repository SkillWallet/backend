{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "alwaysStrict": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["node_modules/*"]
    },
  },
  "include": ["src/**/*.ts", "src/signature.js"],
  "exclude": ["node_modules"]
}
